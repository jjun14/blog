<h1>All Posts</h1>
<table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% if @posts.count == 0 %>
        <tr><td colspan="2">No posts to show!</td></tr>
    <% else %>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Confirm delete?' } %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "Back", root_url %>